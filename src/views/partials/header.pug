header
    a(href="/").header__logo
        i.fab.fa-youtube
    form(method="GET", action="/search").searchForm
        input(name="title", placeholder="검색", type="text", required).searchBox
        div.searchBtn
            input(type="submit", value="").searchBtn__input
            i.fa-solid.fa-magnifying-glass
    nav
        ul
            if loggedIn
                li
                    a(href=`/user/${loggedInUser._id}`).header-profile
                        if !loggedInUser.githubLogin
                            if loggedInUser.avatarUrl === ""
                                img(src="https://opgg-com-image.akamaized.net/attach/images/20220220075312.1538486.jpg")
                            else
                                img(src="/" + loggedInUser.avatarUrl)
                        if loggedInUser.githubLogin
                            img(src=loggedInUser.avatarUrl)
            else
                a(href="/login")
                    li.header-login
                        i.fa-regular.fa-circle-user
                        span 로그인