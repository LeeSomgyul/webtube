extends base.pug

block content
    div.login
        div.login-icon
            i.fab.fa-youtube
            span YouTube
        div.login-form
            form(method="POST")
                div.login-form__id
                    if userIdErrorMessage
                        div=userIdErrorMessage
                    input(name="userId", type="text", placeholder="아이디", required)
                div.login-form__pw
                    if userPwErrorMessage
                        div=userPwErrorMessage
                    input(name="userPw", type="password", placeholder="비밀번호", required)
                div.login-form__loginBtn
                    input(type="submit", value="로그인")
                div.login-form-join
                    a(href="/join") 회원가입
            div.login-form__border
                span
                span or
                span
            a(href="/user/github/start").login-form-git
                i.fa-brands.fa-github
                span 깃허브 로그인